{% extends "base.html.twig" %}
{% block title %}Nos produits
{% endblock %}
{% block body %}
		{% if app.request.attributes.get('_route') == 'product_index' %}
			<div class="container mt-4">
				<div class="jumbotron bg-white">
					{{ form_start(form) }}
						<div class="form-row align-items-end">
							<div class="col">
								{{ form_row(form.equalMark) }}
							</div>
							<div class="col">
								{{ form_row(form.equalPrice) }}
							</div>
							<div class="col">
								<div class="form-group">
									<button class="search btn btn-primary"><i class="fa fa-search fa-2x"></i></button>
								</div>
							</div>
						</div>
					{{ form_end(form) }}
				</div>
				<div class="row">
					{% for product in products %}
						{% include "product/_product.html.twig" %}
					{% endfor %}
				</div>
				<div class="pagination">
					{{ knp_pagination_render(products) }}
				</div>
			</div>
		{% endif %}
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('js/cartAdd.js') }}"></script>
{% endblock %}